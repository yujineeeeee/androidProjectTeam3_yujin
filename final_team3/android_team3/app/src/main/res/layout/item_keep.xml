<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:background="@drawable/custom_checkbox" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/basketImg"
            android:layout_toRightOf="@+id/check_box"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/x"
            android:id="@+id/btnX"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/basketItem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:layout_toRightOf="@+id/basketImg"
            android:ellipsize="end"
            android:maxLines="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/basketItem"
            android:layout_toRightOf="@+id/basketImg"
            android:paddingTop="5dp">

            <ImageButton
                android:id="@+id/subBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sub_btn"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/basketCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_btn"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/basketJeongGa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정가"
            android:textColor="#C3C3C3"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="65dp"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/basketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매가"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>