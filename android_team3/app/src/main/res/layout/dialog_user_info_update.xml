<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_custom"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="회원정보 수정"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etUpdateUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름" />


        <EditText
            android:id="@+id/etUpdateUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일" />


        <EditText
            android:id="@+id/etUpdateUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdateUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="수정" />

        <Button
            android:id="@+id/btnUpdateCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserDelete"
            android:textColor="#A3A3A3"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            android:text="회원탈퇴"/>
    </LinearLayout>

</LinearLayout>